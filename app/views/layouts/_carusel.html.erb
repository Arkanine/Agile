
<div id="myCarousel" class="carousel slide thumbnail">
  <ol class="carousel-indicators" style="list-style: none;">
    <li class="active" data-target="#myCarousel" data-slide-to="0"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
      <%= image_tag("city1.png") %>
      <div class="carousel-caption">
        <h4><span class="glyphicon glyphicon-hand-right"></span> New York</h4>
      </div>
    </div>
    <div class="item">
      <%= image_tag("city2.png") %>
      <div class="carousel-caption">
        <h4><span class="glyphicon glyphicon-hand-right"></span> London</h4>
      </div>
    </div>
    <div class="item">
      <%= image_tag("city3.png") %>
      <div class="carousel-caption">
        <h4><span class="glyphicon glyphicon-hand-right"></span> Berlin</h4>
      </div>
    </div>
    <div class="item">
      <%= image_tag("city4.png") %>
      <div class="carousel-caption">
        <h4><span class="glyphicon glyphicon-hand-right"></span> Toronto</h4>
      </div>
    </div>
  </div>

  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div>

<!-- Call Carousel -->
<script type="text/javascript">
    (function($){$('.carousel').carousel({ interval: 10000, pause:'hover'});
    })(jQuery);
</script>